<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_pujasera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_pujasera"
                android:layout_width="88dp"
                android:layout_height="88dp"
                android:padding="8dp"
                android:layout_gravity="center"
                tools:src="@drawable/ic_pujasera_buka"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_nama_pujasera"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="14sp"
                    tools:text="Pujasera Cipadung" />

                <TextView
                    android:id="@+id/txt_alamat_pujasera"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/textColorBlack"
                    tools:text="Gang Kujang, Jalan Cipadung No. 43 RT. 04/08, Cibiru, Bandung" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_jarak_pujasera"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textSize="12sp"
                        android:textColor="@color/colorAccent"
                        tools:text="14m" />

                    <TextView
                        android:id="@+id/txt_status_pujasera"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="4dp"
                        android:background="@drawable/button_blue_rounded"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:textColor="@color/textColorWhite"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        tools:text="Buka" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>